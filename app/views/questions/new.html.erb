<div class="container">
  <h2 class="title-lg mb">New Question</h2>

<%= form_with model: @question do |form| %>
  <p><%= form.label :body,"Text`s question" %></p>
  <p><%= form.text_area :body,rows: 5, class: 'form-text-area' %></p>
  <p class="mt"><%= form.label :user_id,"User ID" %></p>
  <p><%= form.text_field :user_id, class: 'form-text-field' %></p>
  <p class="mt"><%= form.submit "Create",class: 'button button-main' %></p>
<%end %>
<p><%=link_to "back", questions_path %></p>
</div>